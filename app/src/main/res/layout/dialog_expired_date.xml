<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/textAfter3month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="승인일로부터 3개월후"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textAfter6month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="승인일로부터 6개월후"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textDirectInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="직접입력"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <DatePicker
        android:id="@+id/pickerExpiredDate"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="16dp"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textDialogCancel3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="취소"
                android:textColor="@color/point"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textDialogSubmit3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:text="확인"
                android:textColor="@color/point"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
