<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <CheckBox
        android:id="@+id/checkPlan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="설치전"
        android:textSize="24sp" />

    <CheckBox
        android:id="@+id/checkStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="설치중"
        android:textSize="24sp" />

    <CheckBox
        android:id="@+id/checkFinish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="승인완료"
        android:textSize="24sp" />

    <CheckBox
        android:id="@+id/checkEditStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="수정중"
        android:textSize="24sp" />

    <CheckBox
        android:id="@+id/checkEditFinish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="수정완료"
        android:textSize="24sp" />

    <CheckBox
        android:id="@+id/checkDisStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="해체중"
        android:textSize="24sp" />

    <CheckBox
        android:id="@+id/checkDisFinish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="해체완료"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textDialogCancel10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            android:textColor="@color/point"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textDialogSubmit10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:text="확인"
            android:textColor="@color/point"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>